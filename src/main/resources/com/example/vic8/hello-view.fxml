<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="300.0" prefWidth="559.0" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.vic8.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <BorderPane prefHeight="200.0" prefWidth="200.0">
      <center>
         <TableView fx:id="col111" prefHeight="200.0" prefWidth="236.0" BorderPane.alignment="CENTER">
           <columns>
             <TableColumn fx:id="colLogin" prefWidth="75.0" text="C1" />
             <TableColumn fx:id="colPass" prefWidth="75.0" text="C2" />
           </columns>
         </TableView>
      </center>
   </BorderPane>
   <ButtonBar prefHeight="40.0" prefWidth="200.0">
     <buttons>
       <Button id="but1" fx:id="btn1" mnemonicParsing="false" onAction="#onUpdateClick" text="Обновить" />
         <Button id="but2" fx:id="btn2" mnemonicParsing="false" onAction="#onAdd" text="Добавить" />
         <Button id="but3" fx:id="btn3" mnemonicParsing="false" onAction="#onChange" text="Изменить" />
         <Button id="but4" fx:id="btn4" mnemonicParsing="false" onAction="#onDelete" text="Удалить" />
     </buttons>
   </ButtonBar>
</VBox>
